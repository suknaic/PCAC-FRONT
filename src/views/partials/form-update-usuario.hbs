<link rel="stylesheet" href="/public/css/upload-form.css">
{{error.message}}
  {{#if usuario}}
      <form
        action='/painel/update'
        method='POST'
        class='needs-validation'
        enctype='multipart/form-data'
        novalidate=''
      >
        <div class='row g-3'>
          <div class='col-12'>
            <div class='container'>
              <div class='row'>
                <div class='col-12'>
                  <div class='form-group'>
                    <label for='fileField' class='attachment'>
                      <div class='row btn-file'>
                        <div class='btn-file__preview'></div>
                        <div class='btn-file__actions'>
                          <div
                            class='btn-file__actions__item col-xs-12 text-center'
                          >
                            <div class='btn-file__actions__item--shadow'>
                              <i
                                class='fa fa-plus fa-lg fa-fw'
                                aria-hidden='true'
                              ></i>
                              <div class='visible-xs-block'></div>
                              Selecione Uma imagem de Perfil
                            </div>
                          </div>
                        </div>
                      </div>
                      <input name='avatar' type='file' id='fileField' />
                    </label>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class='col-12'>

            <label for='nomecompleto' class='form-label'>
              Nome Completo
            </label>
            <input
              type='text'
              class='form-control'
              id='nomecompleto'
              name='nome'
              placeholder=''
              value='{{usuario.nome}}'
            />
            <div class='invalid-feedback'>
              informe seu nome completo
            </div>
          </div>

          <div class='col-12'>
            <label for='cpf' class='form-label'>
              CPF
            </label>
            <input
              type='text'
              class='form-control'
              id='cpf'
              name='cpf'
              value='{{usuario.cpf}}'
            />
            <div class='invalid-feedback'>
              Informe um cpf válido
            </div>
          </div>
          <div class='col-12'>
            <label for='email' class='form-label'>
              Email
            </label>
            <input
              type='email'
              class='form-control'
              id='email'
              name='email'
              value='{{usuario.email}}'
              placeholder='email@example.com'

            />
            <div class='invalid-feedback'>
              Entre com um email válido!
            </div>
          </div>

          <div class='col-sm-6'>
            <label for='telefone' class='form-label'>
              WhatsApp
            </label>
            <input
              type='text'
              class='form-control'
              id='telefone'
              name='telefone'
              value='{{usuario.telefone}}'
              placeholder='(68) 9999-9999'

            />
            <div class='invalid-feedback'>
             Informe um telefone válido!
            </div>
          </div>
          <div class='col-sm-6'>
            <label for='password' class='form-label'>
              Senha
            </label>
            <input
              type='text'
              class='form-control'
              id='password'
              name='senha'
              placeholder='*****'
            />
            <div class='invalid-feedback'>
              Insira uma senha!
            </div>
          </div>

          <hr class='my-4' />
          {{#usuario.endereco}}

          <h5 class='titulo'>
            Endereço
          </h5>

          <div class='col-3'>
            <label for='cep' class='form-label'>
              cep
            </label>
            <input
              value='{{cep}}'
              type='text'
              class='form-control'
              id='cep'
              name='cep'
              placeholder='xxxxx-xxx'

            />
            <div class='invalid-feedback'>
              Informe seu cep.
            </div>
          </div>

           <div class='col-6'>
            <label for='cidade' class='form-label'>
              Cidade
            </label>
            <select class='form-select' id='cidade' name='cidade' required=''>
              <option value='{{cidade}}' selected>
                {{cidade}}
              </option>
            </select>
            <div class='invalid-feedback'>
              Selecione a Cidade!
            </div>
          </div>

          <div class='col-3'>
            <label for='estado' class='form-label'>
              Estado
            </label>
            <select class='form-select' id='estado' name='uf'>
              <option value='{{uf}}' selected>
               {{uf}}
              </option>

            </select>
            <div class='invalid-feedback'>
              Selecione o Estado!
            </div>
          </div>

           <div class='col-5'>
            <label for='rua' class='form-label'>
              Rua
            </label>
            <input
              type='text'
              class='form-control'
              id='rua'
              name='rua'
              placeholder='Nome da rua'

              value='{{rua}}'
            />
            <div class='invalid-feedback'>
              Informe o nome da rua.
            </div>
          </div>

          <div class='col-5'>
            <label for='bairro' class='form-label'>
              Bairro
            </label>
            <input
              type='text'
              class='form-control'
              id='bairro'
              name='bairro'
              placeholder='Nome do bairro'
              value='{{bairro}}'
            />
            <div class='invalid-feedback'>
              Informe o nome do Bairro.
            </div>
          </div>

          <div class='col-2'>
            <label for='numero' class='form-label'>
              Número
            </label>
            <input
              type='text'
              class='form-control'
              id='numero'
              name='numero'
              placeholder='1111'
              required=''
              value='{{numero}}'
            />
            <div class='invalid-feedback'>
              Informe o número
            </div>
          </div>

        </div>
         {{/usuario.endereco}}
        <hr class='my-4' />
        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
         <button class=' btn btn-primary' type='submit'>
          Atualizar
        </button>
        </div>
      </form>
  {{/if}}


<script src="/public/js/validaformulario.js"></script>
<script src="/public/js/mask.js"></script>
<script src="/public/js/consultacep.js"></script>
<script src="/public/js/getcidade.js"></script>
