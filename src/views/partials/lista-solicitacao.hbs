              <div class="filter-result">
                  <p class="mb-30">Total de Solicitações: {{this.meta.total}}</p>
                  {{#each this.data}}
                    <div class="job-box d-md-flex align-items-center justify-content-between mb-30">
                        <div class="job-left my-4 d-md-flex align-items-center flex-wrap">
                          {{#with this.Usuario}}
                            <div class="img-holder mr-md-4 mb-md-0 mb-0 mx-auto mx-md-0 d-lg-flex">

                              {{#if image}}
                                <img class="img-holder " src="/avatar/{{image}}" alt="">
                              {{/if}}
                            </div>
                            <div class="row">

                                 <div class="job-content">
                                <ul class="text-capitalize">
                                <h5 class="">{{../this.assunto}}</h5>
                                <li class="mr-md-4">
                                        <i class="zmdi zmdi-time mr-2"></i> {{dateFormat ../this.createAt}}
                                         tipo: <small class="text-muted">{{../this.tipo}}</small>
                                    </li>
                                    <br>
                                    <li class="mr-md-4">
                                        <i class="zmdi zmdi-account mr-2"></i> {{nome}}
                                    </li>
                                    <li class="mr-md-4">
                                        <i class="zmdi zmdi-balance mr-2"></i> {{Entidade.nome}}
                                    </li>
                                </ul>
                            </div>
                            </div>
                          {{/with}}

                        </div>
                        <div class="job-right my-4 flex-shrink-0">
                            <a href="/atendimento/chat/{{this.id}}" class="btn d-block w-100 d-sm-inline-block btn-primary">Visulizar</a>
                        </div>

                    </div>
                  {{/each}}

              </div>
          </div>

          <!-- START Pagination -->
          {{#with this.meta}}
            <nav aria-label="Page navigation">
                <ul class="pagination pagination-reset justify-content-center">
                    {{#if this.prev}}
                        <li class="page-item">
                            <a class="page-link" href="/atendimento?page={{this.prev}}" tabindex="-1">
                                <i class="zmdi zmdi-long-arrow-left"></i>
                            </a>
                        </li>
                        <li class="page-item"><a class="page-link" href="/atendimento?page={{this.prev}}">{{this.prev}}</a></li>
                    {{else}}
                        <li class="page-item disabled">
                            <a class="page-link" href="#" tabindex="-1" aria-disabled="true">
                                <i class="zmdi zmdi-long-arrow-left"></i>
                            </a>
                        </li>
                    {{/if}}
                    <li class="page-item active"><a class="page-link" href="#">{{this.currentPage}}</a></li>

                    {{#if this.next}}
                      <li class="page-item d-none d-md-inline-block"><a class="page-link" href="/atendimento?page={{this.next}}">{{this.next}}</a></li>
                          <li class="page-item">
                          <a class="page-link" href="/atendimento?page={{this.next}}">
                              <i class="zmdi zmdi-long-arrow-right"></i>
                          </a>
                      </li>
                    {{else}}
                        <li class="page-item disabled">
                            <a class="page-link" href="#" tabindex="-1" aria-disabled="true">
                               <i class="zmdi zmdi-long-arrow-right"></i>
                            </a>
                        </li>
                    {{/if}}

                </ul>
            </nav>
          {{/with}}
          <!-- END Pagination -->
      </div>
