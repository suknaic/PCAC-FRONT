<div class="container">
  <div class="row align-items-center">

          <div class="col">
            <div class="card z-depth-3">
              {{>header}}
              <div class="card-body">
                <ul class="nav nav-pills nav-fill" id="menu" role="tablist">
                    <li class="nav-item">
                        <button class="nav-link active" id="pills-home-tab" data-bs-toggle="pill" data-bs-target="#pills-home" type="button" role="tab" aria-controls="pills-home" aria-selected="true">Solicitações</button>
                    </li>
                    <li class="nav-item">
                        <button class="nav-link" id="pills-profile-tab" data-bs-toggle="pill" data-bs-target="#pills-profile" type="button" role="tab" aria-controls="pills-profile" aria-selected="false">Meus Atendimentos</button>
                    </li>
                    <li class="nav-item">
                        <button class="nav-link" id="pills-contact-tab" data-bs-toggle="pill" data-bs-target="#pills-contact" type="button" role="tab" aria-controls="pills-contact" aria-selected="false">Editar Perfil</button>
                    </li>

                    <li class="nav-item ">
                        <a href="/sair" class="nav-link link-danger"><i class="icon-note"></i> <span class="hidden-xs">SAIR</span></a>
                    </li>
                </ul>
                <div class="tab-content p-3" id="menuContent">
                  <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab" tabindex="0">
                    <div class="row">
                      <div class="col-md-12">
                        <h5 class="mt-2 mb-3">Solicitações</h5>
                        {{#if solicitacoes}}
                          {{>lista-solicitacao solicitacoes}}
                        {{else}}
                          <div class="row pb-5 text-light">
                            <div class="col-12 text-center">
                              <img src="/public/img/solicitacao.svg" alt="solicitação" class="mt-5 mb-3">
                              <h4 class="text-primary">Nenhuma solicitação por aqui...</h4>
                            </div>
                          </div>
                        {{/if}}
                      </div>
                    </div>
                  </div>
                  <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab" tabindex="0">
                      <h5 class="mt-2 mb-3">Meus Atendimentos</h5>
                      {{#if solicitacoes}}
                          {{>lista-solicitacao atendimentos}}
                        {{else}}
                              <div class="row pb-5 text-light">
                                <div class="col-12 text-center">
                                  <img src="/public/img/solicitacao.svg" alt="solicitação" class="mt-5 mb-3">
                                  <h4 class="text-primary">Nenhuma solicitação por aqui...</h4>
                                </div>
                              </div>
                        {{/if}}

                  </div>
                  <div class="tab-pane fade" id="pills-contact" role="tabpanel" aria-labelledby="pills-contact-tab" tabindex="0">
                    <h5 class="mt-2 mb-3"><span class="fa fa-clock-o ion-clock float-right"></span>Editar Minhas Informações</h5>
                    {{>form-update-usuario usuario}}
                  </div>
              </div>
          </div>
  </div>
</div>
          {{>footer}}

